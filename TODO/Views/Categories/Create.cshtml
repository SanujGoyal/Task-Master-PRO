@model TODO.Models.Categories

@{
    ViewData["Title"] = "Create Category";
}

<h1 style="text-align: center; margin: 20px 20px;">Add a Category!</h1>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> 

                <div class="form-group mb-3">
                    <label asp-for="CategoriesName" class="control-label">Category Name</label>
                    <input asp-for="CategoriesName" class="form-control" class="form-control form-control-sm" />
                    <span asp-validation-for="CategoriesName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create Category!" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
