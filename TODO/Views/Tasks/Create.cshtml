@model TODO.Models.Tasks

@{
    ViewData["Title"] = "Create Task";
}

<h1 style="text-align: center; margin: 20px 20px;">Add a Task!</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> 
                <div class="form-group mb-3">
                    <label asp-for="TaskName" class="control-label">Task Name</label>
                    <input asp-for="TaskName" class="form-control mt-2" />
                    <span asp-validation-for="TaskName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control mt-2" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Categories.CategoriesName" class="control-label">Category Name</label>
                    @Html.DropDownListFor(x => x.CategoriesId, new SelectList(ViewBag.Categories, "CategoriesId", "CategoriesName"), new { @class = "form-control mt-2" })
                </div>
               
                <div class="form-group text-center">
                    <input type="submit" value="Create Task!" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
